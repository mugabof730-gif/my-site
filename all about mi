  <script>
    const facts = [
      "Fred enjoys building apps that solve real-world problems.",
      "He's exploring free web hosting options like GitHub Pages.",
      "Fred is curious about secure boot, TPM, and OS installs.",
      "He asked about editing music using free apps!",
      "Fred likes fiction, but loves a strong plot even more."
    ];

    function showRandomFact() {
      const fact = facts[Math.floor(Math.random() * facts.length)];
      document.getElementById('fact').innerText = fact;
